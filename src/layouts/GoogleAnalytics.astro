---
interface Props {
    measurementId: string;
}

const { measurementId } = Astro.props;
---

<!-- Google tag (gtag.js) -->
<script is:inline async src={`https://www.googletagmanager.com/gtag/js?id=${measurementId}`}></script>
<script is:inline data-measurementId={measurementId}>
    measurementId = document.querySelector('script[data-measurementId]').getAttribute('data-measurementId');
    window.dataLayer = window.dataLayer || [];
    function gtag() {
        dataLayer.push(arguments);
    }
    gtag('js', new Date());
    gtag('config', measurementId);
</script>
